{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "lib": ["dom", "es2017"],
    "jsx": "react",
    "strict": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "noEmit": true,
    "skipLibCheck": true,
    "moduleResolution": "Node",
    "baseUrl": ".",
    "paths": {
      "@routes": ["./src/routes"],
      "@theme": ["./src/theme"],
      "@utils": ["./src/utils"],
      "@hooks": ["./src/hooks"],
      "@graphql/types": ["./types/generated/gatsby-graphql.ts"],
      "@components/*": ["./src/components/*"]
    }
  },
  "include": ["./src/**/*", "./types/**/*"],
  "exclude": ["./node_modules/*"]
}
